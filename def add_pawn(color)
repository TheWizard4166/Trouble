def add_pawn(color):
    '''Adds a new pawn onto the board, takes in color of the player as argument'''

    yellow_pawn = " "+colorama.Fore.YELLOW +"●"+colorama.Style.RESET_ALL+" "
    blue_pawn = " "+colorama.Fore.BLUE +"●"+colorama.Style.RESET_ALL+" "
    green_pawn = " "+colorama.Fore.GREEN +"●"+colorama.Style.RESET_ALL+" "
    red_pawn = " "+colorama.Fore.RED +"●"+colorama.Style.RESET_ALL+" "

    if color == "yellow":
        if y_pawns_off > 0: #if there is a pawn available to bring onto the board move it out
            trouble_board[0][1] = yellow_pawn
            y_pawns_off -= 1 
            y_pawns_on += 1
        else: #if no pawns left, ask which pawn it wants to move the 6 spaces and call move function
            pawn_num = input(int("Which pawn would you like to move?"))
            move_player("yellow", pawn_num, 6)
    elif color == "blue":
        if b_pawns_off > 0:
            trouble_board[1][14] = blue_pawn
            b_pawns_off -= 1 
            b_pawns_on += 1
        else:
            pawn_num = input(int("Which pawn would you like to move?"))
            move_player("blue", pawn_num, 6)
    elif color == "green":
        if g_pawns_off > 0:
            trouble_board[13][0] = green_pawn
            g_pawns_off -= 1 
            g_pawns_on += 1
        else:
            pawn_num = input(int("Which pawn would you like to move?"))
            move_player("green", pawn_num, 6)
    elif color == "red":
        if r_pawns_off > 0:
            trouble_board[14][13] = red_pawn
            r_pawns_off -= 1 
            r_pawns_on += 1
        else:
            pawn_num = input(int("Which pawn would you like to move?"))
            move_player("red", pawn_num, 6)
